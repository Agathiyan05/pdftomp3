<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C1E4E9"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">


        <EditText
            android:id="@+id/icon"
            android:layout_width="135dp"
            android:layout_height="51dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_box"
            android:text="PDF TO MP3"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="33dp"
            android:layout_height="37dp"
            android:contentDescription="Search Icon"
            android:src="@drawable/search_icon" />

    </LinearLayout>

    <!-- Main Content -->

    <LinearLayout
        android:layout_width="211dp"
        android:layout_height="667dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="104dp">


        <LinearLayout
            android:layout_width="166dp"
            android:layout_height="547dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_box"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="59dp"
                android:contentDescription="Audio Files Icon"
                android:src="@drawable/audio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Audio Files"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="166dp"
            android:layout_height="262dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_box"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Files Icon"
                android:src="@drawable/file_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Files"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="#A7D3DD"
            android:gravity="center">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="162dp"
        android:layout_height="623dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_box"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="125dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:contentDescription="PDF to MP3 Icon"
            android:src="@drawable/icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDF TO MP3"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>